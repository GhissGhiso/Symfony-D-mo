{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main class="container">
        <div class="row">
            <div class="col-12 col-lg-4 col-xl-3">
                <img src="{{ asset('uploads/' ~ post.image) }}" alt="{{ post.title }}" class="mw-100">
            </div>
            <div class="col-12 col-lg-8 col-xl-9">
                <h1>{{ post.title }}</h1>
                <span class="text-muted small">Publi√© le {{ post.publishedAt | date('d/m/Y H:i') }} par {{ post.user.nickname }}</span>
                <p class="m-0 my-2">{{ post.content | u.truncate(50, '....', false) }}</p>
                {% if is_granted('edit', post) %}
                    <div class="d-flex justify-content-end gap-3 mt-3">
                        <a href="{{ path('post_update', {id: post.id}) }}" class="btn btn-outline-primary">Modifier</a>
                        <form action="{{ path('post_delete', {id: post.id}) }}" method="post">
                            <input type="hidden" type="hidden" name="csrf_token" value="{{ csrf_token('delete_post') }}">
                            <button class="btn btn-outline-primary">Supprimer</button>
                        </form>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}